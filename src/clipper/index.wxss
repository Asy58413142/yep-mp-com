}
.clip-bg{
  display: flex;
  align-items: center;
  justify-content:center;
  width:100%;
  position: absolute;
  top:0;
  left:0;
  pointer-events:none;
}

.clip-btn{
  position: fixed;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  font-size: 36rpx;
  color: #fff;
