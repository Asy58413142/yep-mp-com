.clip-point{
  width: 5px;
  height: 5px;
  background-color: #69f;
  opacity: .75;
  position: absolute;
  z-index: 3;
}

.point-t{
  top: -3px;
  left: 50%;
  margin-left: -2.5px;
}

.point-tr{
  top: -2.5px;
  left: 100%;
  margin-left: -2.5px;
}

.point-r{
  top: 50%;
  left: 100%;
  margin: -2.5px 0 0 -2.5px;
}

.point-rb{
  left: 100%;
  top: 100%;
  margin: -2.5px 0 0 -2.5px;
}

.point-b{
