/**uidemos.wxss**/

.view-box{
  height: auto;
  line-height: 40rpx;
  margin-bottom: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.item{
  background-color: #FFFFFF;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx 0 40rpx;
  border-bottom: 1rpx solid #efefef;
  color: #ddd;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-ok{
  color: #000;
}

.item-ing{
  color: #999;
}

.item-todo{
  /*display: none;*/
}

.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 0 30rpx 0 40rpx;
}

.title image{
  width: 40rpx;
  height: 40rpx;
}

.item .name{
  width: 360rpx;
}

.item image{
  width: 30rpx;
  height: 30rpx;
  background: url("http://img20.360buyimg.com/uba/jfs/t28903/76/216734276/364/57d4f9dd/5bf67a45Ne47b0c2c.png") no-repeat;
  background-size: 30rpx 30rpx;
}

.developer{
  display:none;
}

.status{
  /* display: none; */
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  border: 1rpx solid #efefef;
  padding: 0 10rpx;
  margin-right: 20rpx;
}

.status-ing{
  display: block;
}

.status-tobeok{
  display: block;
  background-color: #1890ff;
  color: #FFF;
}
.status-ok{
  display: block;
  background-color: #1AAC19;
  color: #FFF;
}

.deadline{
  width: 80rpx;
  font-size: 22rpx;
}

.developer{
  position: absolute;
  right: 10rpx;
  top: 0;
  font-size: 22rpx;
}

button{
  float: left;
  width: 200rpx;
  height: 60rpx;
  margin: 10rpx;
}
